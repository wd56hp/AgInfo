# AgInfo Environment Variables Configuration
# Copy this file to .env and update values as needed
# DO NOT commit .env to version control (it's in .gitignore)

# =============================================================================
# Server Configuration
# =============================================================================

# Server host IP (0.0.0.0 for all interfaces, or specific IP)
SERVER_HOST_IP=0.0.0.0

# =============================================================================
# PostgreSQL/PostGIS Database Configuration
# =============================================================================

# Database name
POSTGRES_DB=aginfo

# Database user
POSTGRES_USER=agadmin

# Database password (CHANGE IN PRODUCTION!)
POSTGRES_PASSWORD=changeme

# PostGIS container port (internal)
POSTGIS_CONTAINER_PORT=5432

# PostGIS host port (external access)
POSTGIS_HOST_PORT=15433

# Database host (PostGIS container IP - currently hardcoded in docker-compose.yml)
# POSTGRES_HOST=172.28.0.10

# Database port (PostGIS container port - currently hardcoded in docker-compose.yml)
# POSTGRES_PORT=5432

# =============================================================================
# GeoServer Configuration
# =============================================================================

# GeoServer admin username
GEOSERVER_ADMIN_USER=admin

# GeoServer admin password (CHANGE IN PRODUCTION!)
GEOSERVER_ADMIN_PASSWORD=changeme

# GeoServer container port (internal)
GEOSERVER_CONTAINER_PORT=8080

# GeoServer host port (external access)
GEOSERVER_HOST_PORT=8090

# =============================================================================
# Web (Nginx) Configuration
# =============================================================================

# Web container port (internal)
WEB_CONTAINER_PORT=80

# Web host port (external access)
WEB_HOST_PORT=8091

# =============================================================================
# Django Configuration
# =============================================================================

# Django secret key (CHANGE IN PRODUCTION! Generate a new secure key)
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=django-insecure-change-me-in-production

# Django debug mode (True for development, False for production)
DJANGO_DEBUG=True

# Django container port (internal)
DJANGO_CONTAINER_PORT=8000

# Django host port (external access)
DJANGO_HOST_PORT=8000

# GeoDjango library paths (set automatically in Dockerfile, usually don't change)
# GDAL_LIBRARY_PATH=/usr/lib/libgdal.so
# GEOS_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgeos_c.so

# Backup Configuration
BACKUP_DIR=backups
